<Window x:Class="BankProject.Login"
        x:Name="LoginScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BankProject"
        mc:Ignorable="d"
        Title="Login" Height="300" Width="400">
    <Grid>

        <Label Content="User ID" Width="200" Height="30" Margin="0, 0 ,0,-51" HorizontalAlignment="Left" VerticalAlignment="Top"/>
        <TextBox x:Name="UserIDLoginBox" TextWrapping="Wrap" Text="UserID" Width="200" Height="30" Margin="100, 0 ,0,-51" HorizontalAlignment="Left" VerticalAlignment="Top"/>
        <Label Content="Password" Margin="0,51,0,-51" Width="200" Height="30" HorizontalAlignment="Left" VerticalAlignment="Top"/>
        <TextBox x:Name="PasswordLoginBox" TextWrapping="Wrap" Text="Password" Width="200" Height="30" Margin="100, 50 ,0,-51" HorizontalAlignment="Left" VerticalAlignment="Top"/>
        <Button Content="Login" Width="100" Height="20" Margin="100,110, 100, 0"  HorizontalAlignment="Left" VerticalAlignment="Top" Click="Button_Click"/>
        <TextBox x:Name="TEST" HorizontalAlignment="Left" Margin="162,219,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="120"/>
    </Grid>
</Window>
