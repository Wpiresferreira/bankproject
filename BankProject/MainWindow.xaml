<Window x:Class="BankProject.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BankProject"
        mc:Ignorable="d"
        Title="OurBank" Height="450" Width="800"
        Loaded="Window_Loaded">
    <Grid>
        <DockPanel>
            <Menu DockPanel.Dock="Top">
                <MenuItem Header="_Users">
                    <MenuItem Header="_New" />
                    <MenuItem Header="_Edit" />
                    <Separator />
                    <MenuItem Header="_Exit" />
                </MenuItem>
            </Menu>
            <TextBox AcceptsReturn="True" />
        </DockPanel>
            <Button x:Name="LoginBtn" Content="Login" Width="200" Height="80" Click="LoginBtn_Click"/>
        <TextBox x:Name="StatusTextBox" x:FieldModifier="public" Width="500" Height="20" Margin="0,0,0,0" HorizontalAlignment="Left" VerticalAlignment="Bottom" Text="Not Conected"/>
    </Grid>
</Window>
